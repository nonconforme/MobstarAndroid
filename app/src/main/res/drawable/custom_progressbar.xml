<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720" > <!-- 360* -->

    <shape
        android:innerRadius="25dp"
        android:shape="ring"
        android:thickness="7dp"
        android:useLevel="false" >
        
         <size
            android:height="80dp"
            android:width="80dp" />

        <gradient
            android:centerColor="#FFD639"
            android:centerY="0.5"
            android:endColor="#f7ba00"
            android:startColor="#FFF5CF"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>