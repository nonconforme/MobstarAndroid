<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!--<item name="android:colorPrimary">@color/yellow_color</item>-->

        <!--<item name="android:colorAccent">@color/yellow_color</item>-->
        <!--<item name="android:statusBarColor">@color/yellow_color</item>-->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
       <!--  <item name="android:windowNoTitle">true</item> -->
        <item name="android:textColorHighlight">#99f7ba00</item>
        <item name="android:textSelectHandleLeft">@drawable/apptheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/apptheme_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle</item>
    </style>

    <style name="AppThemeActionbar" parent="AppBaseTheme">
		<item name="toolbarStyle">@style/AppThemeToolbar</item>
        <item name="android:colorPrimaryDark">@color/yellow_color</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColorHighlight">#99f7ba00</item>
        <item name="android:textSelectHandleLeft">@drawable/apptheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/apptheme_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/apptheme_text_select_handle_middle</item>
    </style>

    <style name="AppThemeToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BaseActivityDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@null</item>
        <item name="background">@null</item>

        <item name="android:windowBackground">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="DialogAnimationTheme" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="ProgressButton" />

    <style name="ProgressButton.Pin">
        <item name="progress">0</item>
        <item name="max">100</item>
        <item name="circleColor">@color/gray_color</item>
        <item name="progressColor">@color/yellow_color</item>
        <item name="pinned">false</item>
        <item name="animating">false</item>
        <item name="animationSpeed">1</item>
        <item name="animationDelay">50</item>
        <item name="animationStripWidth">6</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- Base theme for the Progress button. -->
    <style name="ProgressButton.Pin.Compat">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="BaseButton">
        <item name="android:textSize">@dimen/base_button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="BaseButton.Yellow" parent="BaseButton">
        <item name="android:background">@drawable/yellow_btn</item>
    </style>

    <style name="BaseButton.Gray" parent="BaseButton">
        <item name="android:background">@drawable/gray_btn</item>
    </style>

    <style name="BaseButton.Gray.NoBold" parent="BaseButton.Gray">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BaseButton.Yellow.NoBold">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RadioButtonYellow">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/selector_oval_yellow_check_box</item>
    </style>

    <style name="WhiteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BaseCheck">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:button">@drawable/custom_checkbox</item>
    </style>

    <style name="BtnClose">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/btn_close</item>
        <item name="android:padding">@dimen/scale_15</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>