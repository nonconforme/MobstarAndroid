<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0px"
    android:gravity="bottom" >

    <RelativeLayout
        android:id="@+id/ptr_id_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pull_bg" >

        <ImageView
            android:id="@+id/ptr_id_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/pull_up" />

        <ProgressBar
            android:id="@+id/ptr_id_spinner"
            style="@android:style/Widget.ProgressBar.Large"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/custom_circle_progressbar" />
    </RelativeLayout>

</LinearLayout>