<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_transparent"
    android:orientation="vertical"
    tools:context=".settings.PersonDetailsActivity" >

    <com.mobstar.custom.CustomTextviewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/personal_details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white_color"
        android:textSize="22sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/signup_margin"
        android:layout_marginRight="@dimen/signup_margin"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.mobstar.custom.CustomTextviewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/full_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_text" />

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textFullNameHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="@string/full_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/signup_hint_text" />
        </LinearLayout>

        <EditText
            android:id="@+id/editFullName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/edittext_rounded_bg"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="@dimen/signup_edittext_padding"
            android:paddingRight="@dimen/signup_edittext_padding"
            android:singleLine="true"
            android:text="asddasda"
            android:textSize="@dimen/signup_edittext" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <com.mobstar.custom.CustomTextviewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_text" />

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textEmailHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="@string/email"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/signup_hint_text" />
        </LinearLayout>

        <EditText
            android:id="@+id/editEmail"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/edittext_rounded_bg"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/signup_edittext_padding"
            android:paddingRight="@dimen/signup_edittext_padding"
            android:singleLine="true"
            android:textSize="@dimen/signup_edittext" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <com.mobstar.custom.CustomTextviewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/display_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_text" />

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textDisplayNameHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="@string/display_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/signup_hint_text" />
        </LinearLayout>

        <EditText
            android:id="@+id/editDisplayName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/edittext_rounded_bg"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="@dimen/signup_edittext_padding"
            android:paddingRight="@dimen/signup_edittext_padding"
            android:singleLine="true"
            android:textSize="@dimen/signup_edittext" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/signup_btn_width"
            android:layout_height="@dimen/signup_btn_height"
            android:background="@drawable/gray_btn_bg"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signup_btn_text" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="@dimen/signup_btn_width"
            android:layout_height="@dimen/signup_btn_height"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yellow_btn_bg"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signup_btn_text" />
    </LinearLayout>

</LinearLayout>