<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg"
    android:orientation="vertical"
    tools:context=".WelcomeVideoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <com.mobstar.custom.CustomTextviewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/select_media_type"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color"
            android:textSize="22sp" />

        <com.mobstar.custom.CustomTextviewBold
            android:id="@+id/llMovieClip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/movie_clip"
            android:orientation="horizontal"
            android:drawableLeft="@drawable/icn_btn_enter_mabstar"
            style="@style/BaseButton.Yellow">

        </com.mobstar.custom.CustomTextviewBold>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_btn_height"
                android:layout_gravity="center_horizontal"
                android:text="@string/back"
                android:gravity="center_vertical|center_horizontal"
                android:drawableLeft="@drawable/icn_btn_back"
                style="@style/BaseButton.Gray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>