<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btnDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_remove_tag" />

        <LinearLayout
            android:id="@+id/layoutDialogCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/conform_number_popup"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textDialogMobileno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="false"
                android:text="@string/country"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white_color"
                 android:textSize="@dimen/signup_btn_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutDialogCenter"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btnDialogNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_btn"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/no"
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_btn_text" />

            <Button
                android:id="@+id/btnDialogYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yellow_btn"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/yes"
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_btn_text" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>