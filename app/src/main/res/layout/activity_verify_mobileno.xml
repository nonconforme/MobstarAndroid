<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/dark_gray_color" >

        <com.mobstar.custom.CustomTextviewBold
            android:id="@+id/textVerifyMobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/verify_mobileno"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <com.mobstar.custom.CustomTextviewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="@string/country"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_color"
            android:textSize="15sp" />

        <com.mobstar.custom.CustomTextviewBold
            android:id="@+id/textCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/verify_drop_down"
            android:padding="10dp"
            android:singleLine="false"
            android:text="@string/country"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerCountry"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
             android:layout_marginTop="10dp">

            <com.mobstar.custom.CustomTextviewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
               
                android:singleLine="false"
                android:text="@string/mobile_no"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white_color"
                android:textSize="@dimen/signup_text" />

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textMobilenoHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginBottom="3dp"
                android:gravity="right"
                android:text="@string/enter_mobileno"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/signup_hint_text" />
        </LinearLayout>

      
        <EditText
            android:id="@+id/edtMobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_round_whitebox"
            android:hint="@string/hint_enter_mobileno"
            android:padding="12dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_color"
            android:textSize="16sp"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/yellow_btn_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/send_code"
        android:textColor="@color/white_color"
        android:textSize="@dimen/signup_btn_text" >
    </Button>

</LinearLayout>