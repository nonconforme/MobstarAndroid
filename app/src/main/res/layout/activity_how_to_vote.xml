<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/background_transparent"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/icn_voting_no"
            android:layout_weight="1"
            android:layout_marginRight="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/icn_voting_yes"
            android:layout_weight="1"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <com.mobstar.custom.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_a_fan"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                style="@style/WhiteTextView"
                android:padding="2dp" />

            <com.mobstar.custom.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/swipe_left"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                style="@style/WhiteTextView"
                android:padding="2dp" />

            <com.mobstar.custom.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_vote_no"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                style="@style/WhiteTextView"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <com.mobstar.custom.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like_it"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                style="@style/WhiteTextView"
                android:padding="2dp" />

            <com.mobstar.custom.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/swipe_right"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                style="@style/WhiteTextView"
                android:padding="2dp" />

            <com.mobstar.custom.CustomTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_vote_yes"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                style="@style/WhiteTextView"
                android:padding="2dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_big_btn_height"
        android:text="@string/ok"
        android:id="@+id/btnOk"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        style="@style/BaseButton.Yellow"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_show_this_again"
        android:id="@+id/cbDonTShowAgain"
        android:layout_below="@+id/btnOk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        style="@style/BaseCheck"
        android:checked="false"
        android:textStyle="bold"
        android:textSize="16dp" />

</RelativeLayout>