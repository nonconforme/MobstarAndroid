<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/splash_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <com.mobstar.custom.CustomTextviewBold
            android:id="@+id/textBlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/blog"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/scale_10"
        android:background="@color/white_color" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/scale_10" >

            <ImageView
                android:id="@+id/imgBlog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scale_200"
                android:adjustViewBounds="true" />

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/scale_10"
                android:gravity="center_vertical"
                android:text="@string/blog"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/yellow_color"
                android:textSize="@dimen/header_text_size" />

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/scale_10"
                android:gravity="center_vertical"
                android:text="@string/blog"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_color"
                android:textSize="@dimen/header_text_size"
                android:textStyle="bold" />

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/scale_10"
                android:gravity="center_vertical"
                android:text="@string/blog"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/comment_bg"
                android:textSize="@dimen/header_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>