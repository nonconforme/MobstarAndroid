<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mobstar.custom.swipe_card_view.SwipeCardView
        android:id="@+id/swipe_card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llRowEntry"
                android:visibility="visible">

                <com.mobstar.custom.SquareFrameLayout
                    android:id="@+id/conteiner_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">

                    <TextureView
                        android:id="@+id/textureView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <FrameLayout
                        android:id="@+id/flPlaceHolder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#ffd7d7d7"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgPlaceHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>

                        <!--     <com.mobstar.custom.ScaleImageView
                                android:id="@+id/imageFrame"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:scaleType="fitXY"
                                android:visibility="gone" /> -->

                        <ImageView
                            android:id="@+id/imageFrame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:visibility="gone"/>

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/ivAudioIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_audio_volume"/>

                    <!--
                         <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:visibility="visible" />
                    -->

                    <ProgressBar
                        android:id="@+id/progressbar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="false"
                        android:indeterminateDrawable="@drawable/custom_progressbar"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ivIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/indicator_image"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <include
                            android:id="@+id/voting_no"
                            layout="@layout/voting_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="10dp"/>

                        <include
                            android:id="@+id/voting_yes"
                            layout="@layout/voting_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_margin="10dp"/>
                    </RelativeLayout>

                </com.mobstar.custom.SquareFrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <FrameLayout
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp">

                        <ImageView
                            android:id="@+id/imgUserPic"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_pic_small"/>

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/circle"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.mobstar.custom.CustomTextviewBold
                                android:id="@+id/textUserName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:singleLine="false"
                                android:text="@string/temp_uname"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/splash_bg"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/btnFollow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/selector_oval_button"
                                android:contentDescription="@string/app_name"
                                android:paddingBottom="3dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="3dp"
                                android:text="@string/follow"
                                android:textSize="12sp"/>

                            <ImageView
                                android:id="@+id/imgMsg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/scale_5"
                                android:src="@drawable/msg_btn"/>

                        </LinearLayout>

                        <com.mobstar.custom.CustomTextview
                            android:id="@+id/textDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/temp_description"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/splash_bg"
                            android:textSize="@dimen/description_text"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">

                            <com.mobstar.custom.CustomTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/posted"
                                android:textColor="@color/posted_txt_color"
                                android:textSize="@dimen/posted_hedText_size"/>

                            <com.mobstar.custom.CustomTextview
                                android:id="@+id/textTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:text="@string/temp_time"
                                android:textColor="@color/posted_txt_color"
                                android:textSize="@dimen/posted_text_size"/>

                            <com.mobstar.custom.CustomTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:text="@string/views"
                                android:textColor="@color/posted_txt_color"
                                android:textSize="@dimen/posted_hedText_size"/>

                            <com.mobstar.custom.CustomTextview
                                android:id="@+id/textViews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:text="@string/temp_time"
                                android:textColor="@color/posted_txt_color"
                                android:textSize="@dimen/posted_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    android:gravity="center"
                    android:paddingBottom="5dp">

                    <FrameLayout
                        android:id="@+id/layoutStatastic"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_oval_button"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <com.mobstar.custom.CustomTextviewBold
                            android:id="@+id/textStatasticCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:drawableLeft="@drawable/icn_statics"
                            android:drawableRight="@drawable/icn_statics_check"
                            android:gravity="center"
                            android:text="@string/temp_comments"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/comment_color"
                            android:textSize="14sp"/>
                    </FrameLayout>


                    <com.mobstar.custom.CustomTextviewBold
                        android:id="@+id/textCommentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/comment_bg"
                        android:drawableLeft="@drawable/ic_comment"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="@string/temp_comments"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/comment_color"
                        android:textSize="14sp"/>

                    <FrameLayout
                        android:id="@+id/layoutSplit"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/splitVideoButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_oval_button"
                            android:drawableLeft="@drawable/icn_vcam"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:text="@string/split"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/comment_color"
                            android:textSize="12sp"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnShare"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_oval_button"
                        android:contentDescription="@string/app_name">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icn_share"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_oval_button"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_info">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/icn_info"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>


            <!--</com.daimajia.swipe.SwipeLayout>-->
        </android.support.v7.widget.CardView>
    </com.mobstar.custom.swipe_card_view.SwipeCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/scale_5"
        android:layout_marginRight="@dimen/scale_5"
        android:layout_marginTop="@dimen/scale_5"
        android:background="@color/talent_pool_row_bg"
        android:orientation="horizontal"
        android:id="@+id/llItemUser"
        android:layout_marginBottom="@dimen/scale_5"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="5dp" >

            <ImageView
                android:id="@+id/imgUserItemPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_pic_small" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/talent_pool_photo_holder" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <com.mobstar.custom.CustomTextviewBold
                android:id="@+id/textUserItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/temp_uname"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>