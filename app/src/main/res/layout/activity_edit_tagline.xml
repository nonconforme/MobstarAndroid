<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_transparent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".settings.PersonDetailsActivity" >

    <com.mobstar.custom.CustomTextviewBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/edit_tagline"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white_color"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/signup_margin"
        android:layout_marginRight="@dimen/signup_margin"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editTagline"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/edittext_rounded_bg"
            android:ems="10"
            android:inputType="textMultiLine|textShortMessage"
            android:paddingLeft="@dimen/signup_edittext_padding"
            android:paddingRight="@dimen/signup_edittext_padding"
            android:singleLine="true"
            android:textSize="@dimen/signup_edittext" >
        </EditText>

        <com.mobstar.custom.CustomTextviewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/edit_bio"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_color"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_bg"
            android:ems="10"
            android:gravity="top|left"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine|textShortMessage"
            android:lines="5"
            android:minLines="5"
            android:paddingLeft="@dimen/signup_edittext_padding"
            android:paddingRight="@dimen/signup_edittext_padding"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textSize="@dimen/signup_edittext" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/signup_btn_width"
            android:layout_height="@dimen/signup_btn_height"
            android:background="@drawable/gray_btn"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signup_btn_text" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="@dimen/signup_btn_width"
            android:layout_height="@dimen/signup_btn_height"
            android:layout_marginLeft="20dp"
            android:background="@drawable/yellow_btn"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signup_btn_text" />
    </LinearLayout>

</LinearLayout>