<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/splash_bg" >

        <com.mobstar.custom.CustomTextviewBold
            android:id="@+id/textInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/entry_information"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <FrameLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp" >

                <ImageView
                    android:id="@+id/imgUserPic"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_pic_small" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/circle" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <com.mobstar.custom.CustomTextviewBold
                        android:id="@+id/textUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:singleLine="false"
                        android:text="@string/temp_uname"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/splash_bg"
                        android:textSize="18sp" />

                    <com.mobstar.custom.CustomTextview
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:text="@string/temp_time"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/splash_bg"
                        android:textSize="@dimen/entry_time_text" />
                </LinearLayout>

                <com.mobstar.custom.CustomTextview
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/temp_description"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/splash_bg"
                    android:textSize="@dimen/description_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_bottom_bg"
            android:orientation="vertical" >

            <com.mobstar.custom.CustomTextviewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:text="@string/category"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/splash_bg"
                android:textSize="16sp" />

            <com.mobstar.custom.CustomTextview
                android:id="@+id/textCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:text="@string/music"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/splash_bg"
                android:textSize="18sp" />

            <com.mobstar.custom.CustomTextview
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/splash_bg" />

            <com.mobstar.custom.CustomTextviewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:text="@string/language"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/splash_bg"
                android:textSize="16sp" />

            <com.mobstar.custom.CustomTextview
                android:id="@+id/textLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:text="@string/english"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/splash_bg"
                android:textSize="18sp" />

            <com.mobstar.custom.CustomTextview
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/splash_bg" />

            <LinearLayout
                android:id="@+id/llGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <com.mobstar.custom.CustomTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="false"
                            android:text="@string/gender"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/splash_bg"
                            android:textSize="16sp" />

                        <com.mobstar.custom.CustomTextview
                            android:id="@+id/textGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="@string/female"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/splash_bg"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <com.mobstar.custom.CustomTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="false"
                            android:text="@string/height"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/splash_bg"
                            android:textSize="16sp" />

                        <com.mobstar.custom.CustomTextview
                            android:id="@+id/textHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="176cm"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/splash_bg"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <com.mobstar.custom.CustomTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="false"
                            android:text="@string/age"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/splash_bg"
                            android:textSize="16sp" />

                        <com.mobstar.custom.CustomTextview
                            android:id="@+id/textAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="23"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/splash_bg"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <com.mobstar.custom.CustomTextview
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/splash_bg" />
            </LinearLayout>

            <com.mobstar.custom.CustomTextviewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:text="@string/tags"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/splash_bg"
                android:textSize="16sp" />

            <com.mobstar.custom.TagView
                android:id="@+id/textTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white_color"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>